<h4>Name: {{ name }}</h4>
<div class="row">
  <div class="col-md-6 col-md-push-6 col-sm-12">
      <a href="https://en.wikipedia.org/wiki/Trojan_Room_coffee_pot" alt="Trojan Room coffee pot" title="Trojan Room coffee pot">
          <div class="coffee-pot"></div>
      </a>
  </div>
  <div class="col-md-6 col-md-pull-6 col-sm-12">
    <table class="table">
      <tbody>
        <tr class="{{ connected.class }}">
          <td>Connected</td>
          <td>{{ connected.text }}</td>
        </tr>
        <tr class="{{ beans.class }}">
          <td>Coffee beans left in container</td>
          <td>{{ beans.text }}</td>
        </tr>
        <tr class="{{ water.class }}">
          <td>Amount of water in tank</td>
          <td>{{ water.text }}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
